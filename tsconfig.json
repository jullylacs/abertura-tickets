{
  "compilerOptions": {
    /* ✅ Geração de código JS compatível com Node moderno */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    /* ✅ Permitir imports modernos e compatibilidade com CommonJS */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* ✅ Gera saída JS em /dist (para scripts compilados) */
    "outDir": "dist",
    /* ✅ Melhor suporte a JSON e bibliotecas externas */
    "resolveJsonModule": true,
    "skipLibCheck": true,
    /* ✅ Relaxe checagens para execução de scripts */
    "strict": false,
    /* ✅ Permite caminhos relativos normais */
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "scripts/**/*.ts",
    "src/models/**/*.ts",
    "src/lib/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
